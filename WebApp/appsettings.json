{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=IRMEPLDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100,
    "TransactionLockDurationMinutes": 30,
    "PasswordMinLength": 6,
    "SessionTimeoutMinutes": 30
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "FromEmail": "noreply@irmep.com",
    "FromName": "IRMEPL"
  },
  "SecuritySettings": {
    "JwtSecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong",
    "JwtExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "PasswordResetTokenExpirationHours": 24
  }
}
