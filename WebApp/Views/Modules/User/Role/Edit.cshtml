@model WebApp.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<form asp-action="Edit" method="post">
    <input asp-for="RoleId" type="hidden" />
    
    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleDescription">Role Description</label>
        <textarea asp-for="RoleDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="RoleDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Status</label><br />
        @Html.RadioButtonFor(m => m.Status, 1) Active
        @Html.RadioButtonFor(m => m.Status, 0) Inactive
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
