@model WebApp.ViewModels.RoleViewModel

@using (Html.BeginForm("Save", "Role", FormMethod.Post))
{
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Role</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <label>Role Name</label>
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", placeholder = "Enter Name" })
                </div>
                <div class="col-md-6">
                    <label>Status</label>
                    @Html.RadioButtonFor(m => m.Status, 1) Active
                    @Html.RadioButtonFor(m => m.Status, 0) Inactive
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">User Privileges</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Module</th>
                        <th>Page</th>
                        <th>Rights</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Replace with real privileges from DB -->
                    <tr>
                        <td>HR</td>
                        <td>Employee Master</td>
                        <td>
                            <input type="checkbox" name="Rights.Create" /> Create
                            <input type="checkbox" name="Rights.Read" /> Read
                            <input type="checkbox" name="Rights.Update" /> Update
                            <input type="checkbox" name="Rights.Delete" /> Delete
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
}
